<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div>
            <div class="card custom-login">
                <h5 class="card-header default-color white-text text-center py-4">Sign up</h5>
                <div class="card-body px-lg-5 pt-0">
                    <form method="POST" action="/signup" class="text-center p-5">
                    <%if(errorMessage) {%>
                      <label class="error"><%= errorMessage %></label>
                    <%}%>
          <!-- Email -->
          <input type="text" name="username" placeholder="User name" class="form-control mb-4"> 

          <!-- Email -->
          <input type="email" name="email" placeholder="E-mail" class="form-control mb-4"> 

          <!-- Password -->
          <input type="password" name="password" placeholder="Password" class="form-control mb-4">

          <!--Confirm Password -->
          <input type="password" name="rePassword" placeholder="Confirm Password" class="form-control mb-4">
          <input type="hidden" name="_csrf" value="<%=csrfToken%>">

          <!--Sign up button -->
          <button class="btn btn-default btn-block my-4" type="submit">Sign up</button>

          
        </form>
                </div>
             </div>
       </div>
    </main>

<%- include('../includes/end.ejs') %>